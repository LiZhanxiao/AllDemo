<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="PopupAnimaFade" parent="android:Animation">
    <item name="android:windowEnterAnimation">@anim/basepopup_fade_in</item>
    <item name="android:windowExitAnimation">@anim/basepopup_fade_out</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
  <style name="progress_big">
    <item name="android:indeterminateDrawable">@drawable/progress_big</item>
    <item name="android:minWidth">40dip</item>
    <item name="android:maxWidth">40dip</item>
    <item name="android:minHeight">40dip</item>
    <item name="android:maxHeight">40dip</item>
  </style>
  <style name="CustomDialog" parent="@android:style/Theme.Dialog">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@color/transparent1</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>
</resources>
